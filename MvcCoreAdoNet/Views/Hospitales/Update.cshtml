@model Hospital

<h1>Modificar hospital</h1>

<form method="post">
    <input type="hidden" name="idhospital" value="@Model.IdHospital" />
    <label class="form-label mt-3">Nombre</label>
    <input type="text" name="nombre" class="form-control" value="@Model.Nombre" />
    <label class="form-label mt-3">Dirección</label>
    <input type="text" name="direccion" class="form-control" value="@Model.Direccion" />
    <label class="form-label mt-3">Teléfono</label>
    <input type="text" name="telefono" class="form-control" value="@Model.Telefono" />
    <label class="form-label mt-3">Camas</label>
    <input type="number" name="camas" class="form-control" value="@Model.Camas" />
    <button class="btn btn-dark mt-3 w-100">
        Modificar hospital
    </button>
</form>

@if (ViewData["MENSAJE"] is not null)
{
    <h2 style="color:red" class="mt-3">@ViewData["MENSAJE"]</h2>
}
