@model List<Doctor>

<h1>Lista doctores</h1>
<form method="post" class="mt-3">
    <div class="row">
        <div class="col-6">
            <input type="text" placeholder="Especialidad" name="especialidad" class="form-control" />
        </div>
        <div class="col-6">
            <button class="btn btn-info w-100">Buscar por especialidad</button>
        </div>
    </div>
</form>

<table class="table table-borderless mt-4">
    <thead class="small">
        <tr>
            <th>Apellido</th>
            <th>Cod Hosp</th>
            <th>Num Doc</th>
            <th>Especialidad</th>
            <th>Salario</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Doctor doctor in Model)
        {
            <tr>

                <td class="fw-bold">@doctor.Apellido</td>
                <td>@doctor.HospitalCod</td>
                <td>@doctor.DoctorNo</td>
                <td>@doctor.Especialidad</td>
                <td>@doctor.Salario</td>
            </tr>
        }
    </tbody>
</table>